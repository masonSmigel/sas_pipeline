#!/usr/bin/env python2
from argparse import ArgumentParser
import sas_pipe.api.cmds as sas


def mkshow(show=None):
    sas.initenv()
    show_name = raw_input('Enter a name of Show: ') if not show else show
    sas.mkshow(show_name)
    print('New Show created {}'.format(str(show_name).upper()))


if __name__ == '__main__':
    parser = ArgumentParser()
    parser.add_argument("-n", "--name", dest="showname",
                        help="show name to create", metavar="SHOW")
    args = vars(parser.parse_args())

    show = args['showname'] if args['showname'] else None
    mkshow(show=show)
